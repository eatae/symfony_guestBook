{% extends 'base.html.twig' %}

{% block title %}Hello Conference Guestbook!{% endblock %}

{% block body %}
    <h2>{{ conference }} Conference</h2>

    {% if comments|length > 0 %}
        <div>There are {{ comments|length }} comments.</div>

        {# for comments #}
        {% for comment in comments %}
            {# photo #}
            {% if comment.photo %}
                <img src="{{ asset('uploads/photos/' ~ comment.photo) }}"/>
            {% endif %}
            {# author #}
            <h4>{{ comment.author }}</h4>
            {# createdAt #}
            <small>
                {{ comment.createdAt|format_datetime('medium', 'short') }}
            </small>
            {# text #}
            <p>{{ comment.text }}</p>

        {% endfor %}

        {% if previous >= 0 %}
            <a href="{{ path('conference/show-one', { slug: conference.slug, offset:previous }) }}">Previous</a>
        {% endif %}

        {% if next < comments|length %}
            <a href="{{ path('conference/show-one', {slug: conference.slug, offset: next}) }}">Next</a>
        {% endif %}
        



            

    {% else %}
        <div>No comments have been posted yet for this conference.</div>
    {% endif %}

{% endblock %}
